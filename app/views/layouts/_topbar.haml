.navbar
  .navbar-inner
    .container
      %ul
        %li.brand
          %a{:href => '/'}CuteAnimal
        %li.span4
          %a{:href => "/"}Home
        %li.span4
          %a{:href => "/"}Wait
      %ul.pull-right
        - if logined?
          %li.dropdown
            %a{:href => person_path(:name => current_user),
               :class => "dropdown-toggle",
               'data-toggle' => 'dropdown', 'data-target' => '#'}
              = current_user.name
              %b.caret
            %ul.dropdown-menu
              %li
                = link_to 'profiles', settings_profile_path
              %li
                = link_to 'password', settings_password_path
              %li.divider
              %li
                = link_to 'logout', logout_path, :method => :delete
        - else
          %li
            = link_to 'login', login_path
          %li
            = link_to 'signup', signup_path