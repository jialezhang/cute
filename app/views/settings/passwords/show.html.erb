<h3>Password Setting</h3>
<%= form_for @current_user, :url => settings_password_path, :method => "put" do |f|%>
<%= @current_user.name %>
    <div class="field">
    <%= f.label :current_password %><br />
    <%= f.password_field :current_password %>
    </div>
    
    <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password %>
    </div>
    
    <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation %>
    </div>

    <div class="actions">
    <%= f.submit 'Save it' %>
    </div>
<% end %>
